 <br>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<p>Title</p>
<%= f.text_field :title,class: "col-sm-10" %>

<p>Opinion</p>
<%= f.text_area :body,class: "col-sm-10" %>

<nav>
 <%= f.submit "Create Book",class: "col-xs-12 btn btn-primary" %>
</nav>

<% end %>
</div>

