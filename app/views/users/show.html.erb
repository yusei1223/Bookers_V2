 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

 <table class="table">
  <tbody><tr></tr>
  <tr>
   <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

 <br>
 <br>
  <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary col-sm-12 col-xs-offset-1 fas fa-user-cog" %>
